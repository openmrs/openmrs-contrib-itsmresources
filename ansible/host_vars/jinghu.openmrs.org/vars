logrotate_scripts:
  - name: bamboologs
    path: "{{ bamboo_catalina }}/logs/catalina.out"
    options:
      - daily
      - size 500M
      - rotate 2
      - missingok
  - name: tomcatlogs
    path: "{{ bamboo_catalina }}/logs/*.log"
    options:
      - daily
      - maxage 15
  - name: accesslogs
    path: "{{ bamboo_catalina }}/logs/access_log*"
    options:
      - daily
      - maxage 15

# Mysql configuration
mysql_root_pass: '{{ vault_mysql_root_password }}'
mysql_port: '3306'
mysql_bind_address: '0.0.0.0'
