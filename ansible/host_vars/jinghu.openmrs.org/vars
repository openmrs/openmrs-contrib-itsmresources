# Bamboo Configuration
bamboo_pass: '{{ vault_bamboo_pass }}'
bamboo_hash_salt: '{{ vault_bamboo_hash_salt }}'
bamboo_user: 'bamboo'
bamboo_checksum: 'sha256:2346901a541ff3d5ed8171bf2224fdee42c7dccece8619e346742935dfacac45'
bamboo_archive: "atlassian-bamboo-11.0.2.tar.gz"
