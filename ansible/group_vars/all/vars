  - root
  - "%wheel"
  - "%admin"
  - "%sudo"

# timezone for all servers
timezone: UTC

# Manage ufw config and ufw rules
ufw_config:
  globalconfig:
    direction: incoming
    logging: "off"
    policy: reject
    state: enabled

ufw_rules:
  sshd:
    port: 22
    proto: tcp
    rule: allow

datadog_agent_version: 7.66.0

datadog_agent_allow_downgrade: true

datadog_tags_default:
    - "provider:{{ ansible_local.provisioning.general.provider | default('unknown') }}"
    - "region:{{ ansible_local.provisioning.general.region | default(ansible_default_ipv4.address | default('unknown')) }}"
    - "environment:{{ ansible_local.provisioning.general.inventory | default('test') }}"
    - "backup:{{ backup_tag }}"
    - "ansible:{{ ansible_tag }}"
    - "provisioner:{{ ansible_local.provisioning.general.provisioner | default('ansible') }}"

datadog_tags_extra: []

datadog_config:
  process_config:
    enabled: "true" # has to be set as a string
  tags: "{{ (datadog_tags_extra | default([])) + datadog_tags_default }}"
  hostname_fqdn: true

datadog_checks:
  upgrades_check:
    init_config:
    instances:
        - foo: bar
  dns_check:
    init_config:
      default_timeout: 4
    instances:
        - name: google
          hostname: www.google.com
          timeout: 8
  disk:
    init_config:
        file_system_global_exclude:
            - squashfs
    instances:
        - service_check_rw: true

backup_tag: 'not-applicable'
backup_user: 'not-applicable'

docker_data_dir: "/var/lib/docker"